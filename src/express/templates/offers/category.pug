extends ../layout.pug

block content
    //- include ../partials/categories.pug
              
    section.tickets-list
      h2.visually-hidden Предложения из категории электроника
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title
            | #{category.name} 
            b.js-qty #{category.offers.length}
        ul
          each pugOffer of category.offers
            li.tickets-list__item
              .ticket-card.ticket-card--color06
                .ticket-card__img
                  img(src=`img/${pugOffer.picture}` alt=pugOffer.title)
                .ticket-card__info
                  span.ticket-card__label #{pugOffer.type}
                  .ticket-card__categories
                      a(href='#') #{category.name}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href='#') #{pugOffer.title}
                    p.ticket-card__price
                      span.js-sum #{pugOffer.sum}
                      |  ₽
                  .ticket-card__desc
                    p #{pugOffer.description}

        .tickets-list__pagination
          ul.pagination
            li
              a.active(href='#') 1
            li
              a(href='#') 2
            li
              a(href='#') 3
            li
              a(href='#') 4
            li
              a(href='#') 5
            li
              a(href='#') дальше
