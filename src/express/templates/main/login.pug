extends ../layout.pug

block content
  main.page-content
    section.login
      form.login__form.form(action='/login' method='post')
        .login__title
          a.login__link(href='register') Регистрация
          h2 Вход

        input(type='hidden' name='_csrf' value=csrfToken)
        .form__field.login__field
          input#email.js-field(type='email' name='email' required)
          label(for='email') Эл. почта
          span Обязательное поле
        .form__field.login__field
          input#password.js-field(type='password' name='password' required)
          label(for='password') Пароль
          span Обязательное поле

        +errorMessage(error)
        button.login__button.btn.btn--medium.js-button(type='submit' disabled) Войти
